<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Action & Views for ibschool.discipline_config -->
    <record id="view_ibschool.discipline_config_tree" model="ir.ui.view">
      <field name="name">ibschool.discipline_config tree</field>
      <field name="model">ibschool.discipline_config</field>
      <field name="arch" type="xml">
        <tree string="ibschool.discipline_config">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_ibschool.discipline_config_form" model="ir.ui.view">
      <field name="name">ibschool.discipline_config form</field>
      <field name="model">ibschool.discipline_config</field>
      <field name="arch" type="xml">
        <form string="ibschool.discipline_config">
          <sheet>
            <group>
              <field name="name"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_ibschool.discipline_config" model="ir.actions.act_window">
      <field name="name">ibschool.discipline_config</field>
      <field name="res_model">ibschool.discipline_config</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html"><![CDATA[Manage ibschool.discipline_config records.]]></field>
    </record>
  </data>
</odoo>
