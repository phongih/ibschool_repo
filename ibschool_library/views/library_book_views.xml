    <record id="view_ibschool.library_book_tree" model="ir.ui.view">
      <field name="name">ibschool.library_book tree</field>
      <field name="model">ibschool.library_book</field>
      <field name="arch" type="xml">
        <tree string="ibschool.library_book">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_ibschool.library_book_form" model="ir.ui.view">
      <field name="name">ibschool.library_book form</field>
      <field name="model">ibschool.library_book</field>
      <field name="arch" type="xml">
        <form string="ibschool.library_book">
          <sheet>
            <group>
              <field name="name"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_ibschool.library_book" model="ir.actions.act_window">
      <field name="name">ibschool.library_book</field>
      <field name="res_model">ibschool.library_book</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html"><![CDATA[Manage ibschool.library_book records.]]></field>
    </record>
  </data>
</odoo>
